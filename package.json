{
  "name": "light-bulb",
  "version": "0.1.0",
  "description": "Save and manage your ideas.",
  "main": "app/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:script": "webpack ./app/script/index.js ./app/public/js/main.js",
    "build:style": "stylus ./app/view/index.styl -o ./app/public/css/main.css",
    "build": "npm run build:style && npm run build:script",
    "watch:script": "webpack ./app/script/index.js ./app/public/js/main.js -w",
    "watch:style": "stylus ./app/view/index.styl -o ./app/public/css/main.css -w",
    "watch": "concurrently \"npm run watch:script\" \"npm run watch:style\"",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitorLuizC/light-bulb.git"
  },
  "keywords": [
    "light-bulb"
  ],
  "author": "Vitor Luiz Cavalcanti <vitorluizc@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VitorLuizC/light-bulb/issues"
  },
  "homepage": "https://github.com/VitorLuizC/light-bulb#readme",
  "dependencies": {
    "express": "^4.14.1",
    "pug": "^2.0.0-beta11"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "stylus": "^0.54.5",
    "webpack": "^2.2.1"
  }
}
