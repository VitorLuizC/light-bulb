/**
 * Typography
 * Default typography style and custom typographies.
 */

@font-face
  font-family: 'Akrobat'
  font-weight: 600
  src: url('../fonts/Akrobat-Bold.woff2') format('woff2'),
       url('../fonts/Akrobat-Bold.woff') format('woff');

@font-face
  font-family: 'Akrobat'
  src: url('../fonts/Akrobat-Regular.woff2') format('woff2'),
       url('../fonts/Akrobat-Regular.woff') format('woff')

@font-face
  font-family: 'Akrobat'
  font-weight: 200
  src: url('../fonts/Akrobat-Extralight.woff2') format('woff2'),
        url('../fonts/Akrobat-Extralight.woff') format('woff')


@font-face
  font-family: 'Akrobat'
  font-weight: 100
  src: url('../fonts/Akrobat-Thin.woff2') format('woff2'),
       url('../fonts/Akrobat-Thin.woff') format('woff')

html
  font-size: 62.5%

body
  font-size: 1.6em
  font-family: 'Akrobat', sans-serif

button
input[type="text"],
input[type="email"],
input[type="password"]
  font: inherit
